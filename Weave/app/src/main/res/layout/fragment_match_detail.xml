<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:contentInsetStart="0dp">

            <ImageButton
                android:id="@+id/ib_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_previous"
                android:background="@color/transparent"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tv_team_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/pretendard_semi_bold"
                android:textSize="16sp"
                android:textColor="@color/basic_white"/>

            <TextView
                android:id="@+id/tv_team_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/pretendard_medium"
                android:textSize="14sp"
                android:textColor="@color/basic_white"
                android:layout_gravity="end"
                android:layout_marginEnd="16dp"
                />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_map"
                android:background="@color/transparent"
                app:tint="@color/basic_white"
                android:layout_marginEnd="4dp"
                tools:ignore="ContentDescription"
                android:layout_gravity="end" />

        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/match_success"
            style="@style/pretendard_bold"
            android:textSize="24sp"
            android:textColor="@color/basic_blue"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_detail_profile"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/btn_move"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/shape_btn_radius_180"
            android:backgroundTint="@color/basic_blue"
            android:text="@string/match_btn_move"
            style="@style/pretendard_semi_bold"
            android:textSize="15sp"
            android:textColor="@color/basic_white"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>
</layout>