<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/basic_black">

        <include
            android:id="@+id/app_bar"
            layout="@layout/app_bar_sign_up"/>

        <TextView
            android:id="@+id/tv_tos_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/pretendard_medium"
            android:textSize="22sp"
            android:textColor="@color/basic_white"
            android:text="@string/tos_comment"
            android:lineSpacingExtra="4dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/app_bar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"/>

        <CheckBox
            android:id="@+id/cb_tos_all"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_tos_comment"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/selector_tos_checkbox"
            android:button="@color/transparent"
            />

        <TextView
            android:id="@+id/tv_tos_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tos_all"
            style="@style/pretendard_medium"
            android:textSize="16sp"
            android:textColor="@color/basic_white"
            app:layout_constraintTop_toTopOf="@+id/cb_tos_all"
            app:layout_constraintBottom_toBottomOf="@+id/cb_tos_all"
            app:layout_constraintStart_toEndOf="@+id/cb_tos_all"
            android:layout_marginStart="12dp"/>

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:dividerColor="#5D5C5C"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cb_tos_all"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="32dp"/>

        <CheckBox
            android:id="@+id/cb_tos_age"
            android:layout_width="16dp"
            android:layout_height="16dp"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/selector_tos_checkbox"
            android:button="@color/transparent"
            />

        <TextView
            android:id="@+id/tv_tos_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tos_age"
            style="@style/pretendard_medium"
            android:textSize="14sp"
            android:textColor="@color/basic_white"
            app:layout_constraintTop_toTopOf="@+id/cb_tos_age"
            app:layout_constraintBottom_toBottomOf="@+id/cb_tos_age"
            app:layout_constraintStart_toEndOf="@+id/cb_tos_age"
            android:layout_marginStart="12dp"/>

        <CheckBox
            android:id="@+id/cb_tos_tos"
            android:layout_width="16dp"
            android:layout_height="16dp"
            app:layout_constraintTop_toBottomOf="@id/cb_tos_age"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/selector_tos_checkbox"
            android:button="@color/transparent"
            />

        <TextView
            android:id="@+id/tv_tos_tos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tos_tos"
            style="@style/pretendard_medium"
            android:textSize="14sp"
            android:textColor="@color/basic_white"
            app:layout_constraintTop_toTopOf="@+id/cb_tos_tos"
            app:layout_constraintBottom_toBottomOf="@+id/cb_tos_tos"
            app:layout_constraintStart_toEndOf="@+id/cb_tos_tos"
            android:layout_marginStart="12dp"/>

        <TextView
            android:id="@+id/tv_link_tos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tos_link_text"
            style="@style/pretendard_medium"
            android:textSize="14sp"
            android:textColor="@color/grey_80"
            app:layout_constraintTop_toTopOf="@id/cb_tos_tos"
            app:layout_constraintBottom_toBottomOf="@id/cb_tos_tos"
            app:layout_constraintEnd_toEndOf="@id/divider"/>

        <CheckBox
            android:id="@+id/cb_tos_privacy"
            android:layout_width="16dp"
            android:layout_height="16dp"
            app:layout_constraintTop_toBottomOf="@id/cb_tos_tos"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/selector_tos_checkbox"
            android:button="@color/transparent"
            />

        <TextView
            android:id="@+id/tv_tos_privacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tos_privacy"
            style="@style/pretendard_medium"
            android:textSize="14sp"
            android:textColor="@color/basic_white"
            app:layout_constraintTop_toTopOf="@+id/cb_tos_privacy"
            app:layout_constraintBottom_toBottomOf="@+id/cb_tos_privacy"
            app:layout_constraintStart_toEndOf="@+id/cb_tos_privacy"
            android:layout_marginStart="12dp"/>

        <TextView
            android:id="@+id/tv_link_privacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tos_link_text"
            style="@style/pretendard_medium"
            android:textSize="14sp"
            android:textColor="@color/grey_80"
            app:layout_constraintTop_toTopOf="@id/cb_tos_privacy"
            app:layout_constraintBottom_toBottomOf="@id/cb_tos_privacy"
            app:layout_constraintEnd_toEndOf="@id/divider"/>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:background="@drawable/shape_btn_radius_180"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="24dp"
            android:layout_marginHorizontal="16dp"
            style="@style/pretendard_semi_bold"
            android:textSize="15sp"
            android:textColor="@color/basic_white"
            android:text="@string/tos_next_btn"
            android:backgroundTint="@color/basic_blue"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>