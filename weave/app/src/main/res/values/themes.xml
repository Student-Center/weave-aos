<resources>
    <style name="Base.Theme.Weave" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">#000000</item>
        <item name="android:soundEffectsEnabled">false</item>
    </style>

    <style name="Theme.Weave" parent="Base.Theme.Weave" />

    <!-- SplashScreen -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/basic_black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/illus_app_title</item>
        <item name="postSplashScreenTheme">@style/Theme.Weave</item>
    </style>

</resources>