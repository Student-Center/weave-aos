<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Weave" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowBackground">@color/basic_black</item>
        <item name="android:statusBarColor">@color/basic_black</item>
        <item name="android:soundEffectsEnabled">false</item>

        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="s">3000</item>
    </style>

    <style name="Theme.Weave" parent="Base.Theme.Weave" />

    <style
        name="BottomNavigationTextStyle" parent="Widget.Design.BottomNavigationView">
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/grey_99</item>
        <item name="android:visibility">visible</item><!-- 선택되지 않은 상태일 때의 텍스트 색상 -->
    </style>

    <style name="BottomNavigationTextStyle.Selected" parent="Widget.Design.BottomNavigationView">
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/basic_white</item> <!-- 선택된 상태일 때의 텍스트 색상 -->
        <item name="android:visibility">visible</item> <!-- 선택된 상태일 때 라벨 숨기기 -->
    </style>

    <!-- Range Slider -->
    <style name="Range_Slider" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/basic_blue</item>
        <item name="labelBehavior">gone</item>
        <item name="tickVisible">false</item>
    </style>

    <style name="RoundedCornersDialog" parent="@style/Theme.AppCompat.Dialog">
        <item name="dialogCornerRadius">16dp</item>
    </style>
</resources>