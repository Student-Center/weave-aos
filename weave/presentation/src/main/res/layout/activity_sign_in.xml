<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/basic_black"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_sign_in_app_title"
            android:layout_width="166dp"
            android:layout_height="30dp"
            android:background="@drawable/illus_app_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.3"
            tools:ignore="ContentDescription" />
        
        <ImageButton
            android:id="@+id/btn_kakao_login"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/btn_kakao_login"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="46dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="140dp"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/btn_apple_login"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/btn_apple_login"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="46dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="80dp"
            tools:ignore="ContentDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>